<?xml version="1.0"?>
<block>
  <name>NRZ-L Encoder</name>
  <key>ecss_nrzl_encoder</key>
  <category>[ecss]</category>
  <import>import ecss</import>
  <make>ecss.nrzl_encoder($bit_rate, $samp_rate)</make>
  
  <param>
    <name>Samp Rate</name>
    <key>samp_rate</key>
    <value>samp_rate</value>
    <type>real</type>
  </param>

  <param>
    <name>Bit Rate</name>
    <key>bit_rate</key>
    <value>bit_rate</value>
    <type>real</type>
  </param>

  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>
  <source>
    <name>out</name>
    <type>float</type>
  </source>
</block>
