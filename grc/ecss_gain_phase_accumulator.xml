<?xml version="1.0"?>
<block>
  <name>Gain Phase Accumulator</name>
  <key>ecss_gain_phase_accumulator</key>
  <category>[ecss]</category>
  <import>import ecss</import>
  <make>ecss.gain_phase_accumulator($N, $uplink, $downlink)</make>
	<callback>set_uplink($uplink)</callback>
  <callback>set_downlink($downlink)</callback>

	<param>
		<name>N of bits</name>
		<key>N</key>
		<value>38</value>
		<type>int</type>
	</param>
	<param>
		<name>uplink</name>
		<key>uplink</key>
		<value>221</value>
		<type>int</type>
	</param>
  	<param>
		<name>downlink</name>
		<key>downlink</key>
		<value>240</value>
		<type>int</type>
	</param>
	<param>
		<name>Vec Length</name>
		<key>vlen</key>
		<value>1</value>
		<type>int</type>
	</param>
	<check>$vlen &gt; 0</check>
	<sink>
		<name>in</name>
		<type>s64</type>
		<vlen>$vlen</vlen>
	</sink>
	<source>
		<name>out</name>
		<type>s64</type>
		<vlen>$vlen</vlen>
	</source>
</block>
