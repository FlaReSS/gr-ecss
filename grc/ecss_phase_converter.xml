<?xml version="1.0"?>
<block>
  <name>Phase Converter</name>
  <key>ecss_phase_converter</key>
  <category>[ecss]</category>
  <import>import ecss</import>
  <make>ecss.phase_converter($N)</make>

  <param>
    <name>number of bits</name>
    <key>N</key>
    <type>int</type>
  </param>

  <check>$N &gt;= 1 and $N &lt;= 52</check>

  <sink>
    <name>in</name>
    <type>float</type>
  </sink>

  <source>
    <name>out</name>
    <type>s64</type>
  </source>
</block>
